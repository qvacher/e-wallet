@require '../colors.styl'

.card{
  background-color: $blue-darken-1 !important;
  border-radius: 10px;

  .v-card__title{
    justify-content: space-between;
  }
  &__title{
    color: $grey-darken;
    text-transform: uppercase;
  }

  &__code{
    font-size: 18px;
    color: $grey;
    text-align: left;
  }

  &__amount{
    font-weight: bold;
    font-size: 24px;
  }

  &__owner{
    margin-top: 32px;
    margin-bottom:0;
    font-size: 16px;
    text-align: left;
    text-transform: uppercase;
    color: $grey-darken;
  }

  &__add{
    background-color: $blue-darken-1 !important;
    border-radius: 10px;
    color: $grey-darken !important;
    width: 100%;
    height: 186px;
    font-weight: bold;
    border: 2px dashed;
    border-color: $grey-darken !important;
    margin: 0;
    box-shadow: none !important;

    &:hover{
      color: $grey !important;
    }
  }
}

/* FLIP CARD FEATURE */
.flip-card {
  width: 100%;
  height: 186px;
  perspective: 1000px; /* Remove this if you don't want the 3D effect */
}

/* This container is needed to position the front and back side */
.flip-card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: transform 1.2s;
  transform-style: preserve-3d;
}

/* Do an horizontal flip when you move the mouse over the flip box container */
.flipped {
  transform: rotateY(180deg);
}

/* Position the front and back side */
.flip-card-front, .flip-card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 10px;
}

/* Style the front side (fallback if image is missing) */
.flip-card-front {
  background-color: $blue-darken !important;
}

/* Style the back side */
.flip-card-back {
  background-color: $red !important;
  transform: rotateY(180deg);

  .layout{
    height: 100%;
    align-items: center;
    justify-content: center;
  }
} 