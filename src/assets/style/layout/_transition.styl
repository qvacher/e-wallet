/* Les animations d'entrée (« enter ») et de sortie (« leave »)  */
/* peuvent utiliser différentes fonctions de durée et de temps.  */
.list-enter-active {
  transition: opacity .8s ease;
}
.list-leave-active {
  transition: opacity .8s ease;
}
.list-enter, .list-leave-to, .list-leave-active {
  //transform: translateX(-100%)
  opacity: 0;
}

.carousel-enter-active {
  transition: all .8s ease;
}
.carousel-leave-active {
  transition: all .8s ease;
}
.carousel-enter, .carousel-leave-to, .carousel-leave-active {
  transform: translateX(10px)
  opacity: 0;
}

.transactions-enter-active {
  transition: all .8s ease;
}
.transactions-leave-active {
  transition: all .8s ease;
}
.cartransactionsousel-enter, .transactions-leave-to, .transactions-leave-active {
  transform: translateX(100%)
  opacity: 0;
}